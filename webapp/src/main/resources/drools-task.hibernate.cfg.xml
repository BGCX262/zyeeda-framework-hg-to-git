<?xml version="1.0" encoding="utf-8"?>

<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
    	<!-- MySQL 5.1 
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLInnoDBDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/framework</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property>-->
        <!-- Oracle 10g -->
        <property name="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</property>
        <property name="hibernate.connection.driver_class">oracle.jdbc.OracleDriver</property>
        <property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:XE</property>
        <property name="hibernate.connection.username">tangrui</property>
        <property name="hibernate.connection.password">tangrui</property>
        
        <property name="hibernate.connection.autocommit">false</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="hibernate.show_sql">false</property>
        <property name="hibernate.format_sql">false</property>
        <property name="hibernate.use_sql_comments">false</property>
        <property name="hibernate.id.new_generator_mappings">true</property>
        
        <mapping resource="org/drools/task/Attachment.orm.xml" />
        <mapping resource="org/drools/task/Content.orm.xml" />
        <mapping resource="org/drools/task/BooleanExpression.orm.xml" />
        <mapping resource="org/drools/task/Comment.orm.xml" />
        <mapping resource="org/drools/task/Deadline.orm.xml" />
        <mapping resource="org/drools/task/Deadlines.orm.xml" />
        <mapping resource="org/drools/task/Delegation.orm.xml" />
        <mapping resource="org/drools/task/Escalation.orm.xml" />
        <mapping resource="org/drools/task/OrganizationalEntity.orm.xml" />
        <mapping resource="org/drools/task/Group.orm.xml" />
        <mapping resource="org/drools/task/User.orm.xml" />
        <mapping resource="org/drools/task/I18NText.orm.xml" />
        <mapping resource="org/drools/task/Notification.orm.xml" />
        <mapping resource="org/drools/task/EmailNotification.orm.xml" />
        <mapping resource="org/drools/task/EmailNotificationHeader.orm.xml" />
        <mapping resource="org/drools/task/PeopleAssignments.orm.xml" />
        <mapping resource="org/drools/task/Reassignment.orm.xml" />
        <mapping resource="org/drools/task/Task.orm.xml" />
        <mapping resource="org/drools/task/TaskData.orm.xml" />
        <mapping resource="org/drools/task/SubTasksStrategy.orm.xml" />
        <mapping resource="org/drools/task/OnParentAbortAllSubTasksEndStrategy.orm.xml" />
        <mapping resource="org/drools/task/OnAllSubTasksEndParentEndStrategy.orm.xml" />
	</session-factory>
</hibernate-configuration>
