<?xml version="1.0" encoding="UTF-8" ?>

<configuration>

	<services>
		<service>
			<name>template-service</name>
			<class>com.zyeeda.framework.services.internal.FreemarkerTemplateServiceProvider</class>
		</service>
	</services>
	
    <template-service>
        <templateRepositoryRoot>/WEB-INF/tpl</templateRepositoryRoot>
        <dateFormat>yyyy-MM-dd</dateFormat>
        <timeFormat>hh:mm:ss</timeFormat>
        <datetimeFormat>yyyy-MM-dd hh:mm:ss</datetimeFormat>
    </template-service>

</configuration>
