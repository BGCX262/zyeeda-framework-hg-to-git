<?xml version="1.0" encoding="UTF-8" ?>

<configuration>

	<services>
		<service>
			<name>template-service</name>
			<class>com.zyeeda.framework.services.internal.FreemarkerTemplateServiceProvider</class>
		</service>
		<service>
			<name>security-service</name>
			<class>com.zyeeda.framework.services.internal.ShiroSecurityServiceProvider</class>
		</service>
		<service>
			<name>ldap-service</name>
			<class>com.zyeeda.framework.services.internal.SunJndiLdapServiceProvider</class>
		</service>
	</services>
	
    <template-service>
        <templateRepositoryRoot>/WEB-INF/tpl</templateRepositoryRoot>
        <dateFormat>yyyy-MM-dd</dateFormat>
        <timeFormat>hh:mm:ss</timeFormat>
        <datetimeFormat>yyyy-MM-dd hh:mm:ss</datetimeFormat>
    </template-service>
    <security-service />
    <ldap-service>
    	<providerUrl>ldap://localhost:10389/ou=Users\,dc=example\,dc=com</providerUrl>
    	<securityAuthentication>simple</securityAuthentication>
    	<systemSecurityPrincipal>uid=aeinstein\,ou=Users\,dc=example\,dc=com</systemSecurityPrincipal>
    	<systemSecurityCredentials>secret</systemSecurityCredentials>
    	<securityPrincipalTemplate>uid=${username}\,ou=Users\,dc=example\,dc=com</securityPrincipalTemplate>
    	<referral>follow</referral>
    	<usePooling>true</usePooling>
    </ldap-service>

</configuration>
