<?xml version="1.0" encoding="UTF-8" ?>

<configuration>

	<services>
		<service>
			<name>template-service</name>
			<class>com.zyeeda.framework.services.internal.FreemarkerTemplateServiceProvider</class>
		</service>
		<service>
			<name>security-service</name>
			<class>com.zyeeda.framework.services.internal.ShiroSecurityServiceProvider</class>
		</service>
		<service>
			<name>ldap-service</name>
			<class>com.zyeeda.framework.services.internal.ShiroLdapServiceProvider</class>
		</service>
	</services>
	
    <template-service>
        <templateRepositoryRoot>/WEB-INF/tpl</templateRepositoryRoot>
        <dateFormat>yyyy-MM-dd</dateFormat>
        <timeFormat>hh:mm:ss</timeFormat>
        <datetimeFormat>yyyy-MM-dd hh:mm:ss</datetimeFormat>
    </template-service>
    <security-service />
    <ldap-service>
    	<authentication>simple</authentication>
    	<searchBase>ou=Users\,dc=example\,dc=com</searchBase>
    	<url>ldap://localhost:10389</url>
    	<referral>follow</referral>
    	<usePooling>true</usePooling>
    	<systemUsername>uid=aeinstein\,ou=Users\,dc=example\,dc=com</systemUsername>
    	<systemPassword>secret</systemPassword>
    </ldap-service>

</configuration>
