<?xml version="1.0" encoding="UTF-8"?>
<web-app>
    <display-name>Zyeeda Framework</display-name>

    <context-param>
        <param-name>Server JNDI Name</param-name>
        <param-value>java:comp/env/zyeeda/TestServer</param-value>
    </context-param>

    <listener>
        <listener-class>
            com.zyeeda.framework.web.ContextListener
        </listener-class>
    </listener>

    <!--
    <filter>
        <filter-name>Remote User Mock Filter</filter-name>
        <filter-class>com.zyeeda.framework.web.mock.RemoteUserMockFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Remote User Mock Filter</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>
    -->

    <filter>
        <filter-name>Character Encoding Filter</filter-name>
        <filter-class>com.zyeeda.framework.web.CharacterEncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Character Encoding Filter</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>Apache Shiro Filter</filter-name>
        <filter-class>org.apache.shiro.web.servlet.IniShiroFilter</filter-class>
    </filter>
</web-app>
